<html>
    <head>
      <title>Hitchhikers</title>
       <% include ./partials/header %>
    </head>
    <body>
        
        <script>
            window.fbAsyncInit = function() {
            FB.init({
              appId      : '1442992375731712',
              cookie     : true,
              xfbml      : true,
              version    : 'v2.8'
            });
            FB.AppEvents.logPageView();   
          };

          (function(d, s, id){
             var js, fjs = d.getElementsByTagName(s)[0];
             if (d.getElementById(id)) {return;}
             js = d.createElement(s); js.id = id;
             js.src = "//connect.facebook.net/en_US/sdk.js";
             fjs.parentNode.insertBefore(js, fjs);
           }(document, 'script', 'facebook-jssdk'));
           
        </script>

        <h1>Login</h1>
        <fb:login-button 
            scope="public_profile,email"
            onlogin="checkLoginState();">
        </fb:login-button>

        <form action = "/login" method = "POST">
             <div>Username: <input type = "text" name = "username" placeholder = "username" required></div>
             <div>Password: <input type = "password" name = "password" placeholder = "password" required></div>
             <% if( error !== null ){ %>
                <% if( error !== "" ){ %>
                    <li><%= error %></li>
                 <% } %>
             <% } %>
             <button>Login</button>
        </form>
        <% include ./partials/footer %>
    </body>
</html>