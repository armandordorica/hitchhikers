    <body>
        <div class="container">
        <h1 style="color:black;">Create a Trip!</h1>
        <%if(!user.accountType){%>
            <div>
                <p>Error: You Must be a Driver to Create Trip</p>
            </div>
        <% } else {%>
             <div class="container post-trip" style="padding-top: 30px;">
               <div class="row">
            <div class="col-md-6">
                <div class="well well-sm">
                <form id="postTripForm" action="/trip/new" method="POST">
                    <div class="form-group">
                        <p>Origin</p>
                        <input class="form-control" type="text" name="origin" placeholder="Origin" <% if((origin !== undefined) && (origin !== null) && (origin !== "")){ %> value= <%= origin %> <% } %> required>
                         
                    </div>
                    <div class="form-group">
                        <p>Destination</p>
                        <input class="form-control" type="text" name="destination" placeholder="Destination" <% if((destination !== undefined) && (destination !== null) && (destination !== "")){ %> value= <%= destination %> <% } %> required>
                    </div>
                    <div class="form-group">
                        <p>Price</p>
                        <input class="form-control" type="number" name="price" placeholder="Price" <% if((price !== undefined) && (price !== null) && (price !== "")){ %> value= <%= price %> <% } %> required>
                    </div>
                    <div class="form-group">
                        <p>Seats:</p>
                        <input class="form-control" type="number" name="seats" placeholder="Available Seats" required>
                    </div>
                    <div class="form-group">
                        <p>Date:</p>
                        <input class="form-control" type="date" name="date" placeholder="Date" required>
                    </div>
                    <div>
                        <button class="btn btn-default btn-block">Submit</button>
                    </div>
                </form>
            </div>
        <% } %>
